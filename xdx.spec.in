%define name xdx
%define version @VERSION@
%define release 1

# required items
Name: %{name}
Version: %{version}
Release: %{release}
Copyright: GPL
Group: Applications/Networking
Prefix: /usr
BuildRoot: /var/tmp/%{name}-%{version}
Summary: DX-cluster tcp/ip client for amateur radio
Vendor: Joop Stakenborg <pa4tu@amsat.org>
URL: http://people.debian.org/~pa3aba/xdx.html
Packager: Joop Stakenborg <pa4tu@amsat.org>
Source: %{name}-%{version}.tar.gz

%description
Xdx is a client to connect to a DX-cluster. Dx messages will be displayed in a
list, announcements will go to a text display.

%prep
%setup -q

%build
%configure
make

%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc README AUTHORS ChangeLog

/usr/share/locale/nl/LC_MESSAGES/xdx.mo
/usr/share/locale/fr/LC_MESSAGES/xdx.mo
/usr/share/xdx/pixmaps/xdx.png
/usr/share/xdx/pixmaps/xdx.xcf
/usr/share/xdx/pixmaps/xdx.xpm
/usr/share/man/man1/xdx.1.gz
/usr/bin/xdx


